        </form>


        
        <!-- ADD and DELETE button box -->
        <div class="button-box">
            <!-- task add button -->
            <button class="btn btn-add" type="submit" form="create">Add</button>
            <!-- task delete button -->
            <button class="btn btn-delete" type="submit" form="checked">Delete</button>

        </div>
        <hr>

        <!-- TASKs list display container -->
        <div class="display-container">

            <!-- form to check checkbox are checked or not  -->
            <form action="/task" id="checked" method="post">

                <!-- Unordered List to display task from MongoDB -->
                <ul>
                    <% for (let i=0; i < taskList.length; i++){ %>
                        <hr>

                        <li>

                            <label for=<%=taskList[i]._id%> class="label-box">
                                <!-- checkbox -->
                                <input  type="checkbox" value=<%=taskList[i]._id%> name=
                                "checkedListId"
                                id=<%=taskList[i]._id%> />

                                    <!-- taskDetails -->
                                    <div class="details">
                                        <dl>
                                            <!-- Description -->
                                            <dt><strong>
